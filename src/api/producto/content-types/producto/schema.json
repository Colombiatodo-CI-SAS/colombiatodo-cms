{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "singularName": "producto",
    "pluralName": "productos",
    "displayName": "Producto",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "uuid": {
      "type": "uid",
      "required": true,
      "targetField": "titulo"
    },
    "titulo": {
      "type": "string",
      "required": true
    },
    "precio": {
      "type": "biginteger",
      "required": true
    },
    "impuesto": {
      "type": "integer",
      "required": true
    },
    "descuento": {
      "type": "integer"
    },
    "imagenes": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "descripcion": {
      "type": "blocks",
      "required": true
    },
    "dimensiones_producto": {
      "displayName": "dimensiones",
      "type": "component",
      "repeatable": false,
      "component": "dimensiones.dimensiones"
    },
    "seller": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::seller.seller",
      "inversedBy": "productos"
    },
    "tallas_disponibles": {
      "type": "component",
      "repeatable": true,
      "component": "variantes.talla"
    },
    "dimensiones_empaque": {
      "type": "component",
      "repeatable": false,
      "component": "dimensiones.dimensiones"
    },
    "stock": {
      "type": "integer",
      "required": true
    },
    "categorias": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::categoria.categoria",
      "mappedBy": "productos"
    }
  }
}
